{
    "private": true,
    "name": "ovo-webform",
    "description": "",
    "license": "MIT",
    "scripts": {
        "build": "npm run bases && npm run build:css && cross-env NODE_ENV=production remix build",
        "build:css": "tailwindcss -o ./app/tailwind.css",
        "bases": "node ./scripts/bases.js",
        "dev": "cross-env NODE_ENV=development run-p dev:*",
        "prepare": "husky install",
        "postinstall": "remix setup cloudflare-pages",
        "dev:remix": "remix watch",
        "dev:css": "tailwindcss -o ./app/tailwind.css --watch",
        "dev:wrangler": "wrangler pages dev ./public --watch ./build --binding $(cat .env) --kv OVO_KV",
        "start": "npm run dev:wrangler"
    },
    "dependencies": {
        "@heroicons/react": "^1.0.5",
        "@remix-run/cloudflare-pages": "^1.1.3",
        "@remix-run/react": "^1.1.3",
        "@remix-run/serve": "^1.1.3",
        "@tailwindcss/forms": "^0.4.0",
        "daisyui": "^2.0.6",
        "date-fns": "^2.28.0",
        "date-fns-tz": "^1.2.2",
        "jose": "^4.5.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "remix": "^1.1.3",
        "remix-utils": "^2.5.0"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^3.2.0",
        "@remix-run/dev": "^1.1.3",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/node": "^17.0.17",
        "@types/react": "^17.0.24",
        "@types/react-dom": "^17.0.9",
        "cross-env": "^7.0.3",
        "esbuild": "0.13.14",
        "husky": "^7.0.4",
        "node-fetch": "^3.2.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.6",
        "prettier": "2.5.1",
        "tailwindcss": "^3.0.22",
        "typescript": "^4.5.5",
        "wrangler": "^0.0.16"
    },
    "engines": {
        "node": ">=14"
    },
    "sideEffects": false,
    "main": "dist/worker.js"
}
